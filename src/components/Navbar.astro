<nav>
  <div class="nav-container">
    <a href="/" class="logo z-layer">NIKHIL<span>.ML</span></a>
    
    <div class="nav-right-group">
        <div class="social-nav-group z-layer">
            {socialItems.map(item => (
                <a href={item.path} target="_blank" rel="noopener noreferrer" class="nav-icon-link" aria-label={item.name}>
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="20" height="20" fill="currentColor">
                        <path d={item.icon} />
                    </svg>
                </a>
            ))}
        </div>

        <div class="nav-links">
            {navItems.map(item => (
                <a href={item.path} class="nav-item">{item.name}</a>
            ))}
        </div>

        <button class="hamburger z-layer" aria-label="Toggle menu" aria-expanded="false">
            <span class="hamburger-line"></span>
            <span class="hamburger-line"></span>
            <span class="hamburger-line"></span>
        </button>
    </div>
  </div>
  
  <div class="mobile-menu-overlay">
    <div class="mobile-menu">
      {navItems.map(item => (
        <a href={item.path} class="mobile-nav-item">{item.name}</a>
      ))}
    </div>
  </div>
</nav>

<script>
  function initMenu() {
    const btn = document.querySelector('.hamburger');
    const menu = document.querySelector('.mobile-menu-overlay');
    const body = document.body;

    if (!btn || !menu) return;

    // Avoid stacking listeners across page transitions
    btn.replaceWith(btn.cloneNode(true));
    const newBtn = document.querySelector('.hamburger');

    function toggleMenu() {
      const expanded = newBtn.getAttribute('aria-expanded') === 'true';
      newBtn.setAttribute('aria-expanded', String(!expanded));
      menu.classList.toggle('active', !expanded);
      body.style.overflow = !expanded ? 'hidden' : '';
    }

    function closeMenu() {
      newBtn.setAttribute('aria-expanded', 'false');
      menu.classList.remove('active');
      body.style.overflow = '';
    }

    newBtn.addEventListener('click', toggleMenu);

    // Close on mobile nav taps
    document.querySelectorAll('.mobile-nav-item').forEach(link => {
      link.addEventListener('click', closeMenu);
    });

    // Close when clicking overlay itself
    menu.addEventListener('click', (e) => {
      if (e.target === menu) closeMenu();
    });
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initMenu);
  } else {
    initMenu();
  }

  // Astro page transitions
  document.addEventListener('astro:page-load', initMenu);
</script>

<style>
  /* LAYOUT */
  .nav-container {
    max-width: var(--container);
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .nav-right-group {
    display: flex;
    align-items: center;
    gap: 2rem; /* Space between Socials and Page Links */
  }

  /* SOCIAL ICONS */
  .social-nav-group {
    display: flex;
    gap: 1rem;
    align-items: center;
    position: relative; /* Ensure z-index works */
  }

  .nav-icon-link {
    color: var(--text-muted);
    transition: color 0.2s;
    display: flex;
    align-items: center;
  }

  .nav-icon-link:hover {
    color: var(--accent);
  }

  /* NAVIGATION LINKS */
  .nav-item {
    color: var(--text-muted);
    text-decoration: none;
    transition: color 0.2s;
  }

  .nav-item:hover {
    color: var(--accent);
  }

  /* HAMBURGER */
  .hamburger {
    display: none;
    background: none;
    border: none;
    cursor: pointer;
    padding: 12px;
    flex-direction: column;
    gap: 6px;
    position: relative; 
    z-index: 1001;
    -webkit-tap-highlight-color: transparent;
    touch-action: manipulation;
  }
  
  .logo.z-layer { position: relative; z-index: 1001; }
  .social-nav-group.z-layer { position: relative; z-index: 1001; }

  .hamburger-line {
    width: 24px; height: 2px;
    background-color: var(--text-main);
    transition: all 0.3s ease;
    border-radius: 2px;
  }
  
  .hamburger[aria-expanded="true"] .hamburger-line:nth-child(1) { transform: rotate(45deg) translate(5px, 6px); }
  .hamburger[aria-expanded="true"] .hamburger-line:nth-child(2) { opacity: 0; transform: translateX(-10px); }
  .hamburger[aria-expanded="true"] .hamburger-line:nth-child(3) { transform: rotate(-45deg) translate(5px, -6px); }
  
  /* MOBILE MENU */
  .mobile-menu-overlay {
    display: none;
    position: fixed;
    top: 0; left: 0; width: 100%; height: 100vh;
    background: var(--bg-color);
    z-index: 1000;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s ease, visibility 0.3s;
    padding-top: 120px;
  }
  
  .mobile-menu-overlay.active { opacity: 1; visibility: visible; display: block; }
  .mobile-menu { display: flex; flex-direction: column; align-items: center; gap: 2rem; }
  
  .mobile-nav-item {
    font-family: 'Space Grotesk', sans-serif;
    font-size: 2rem; font-weight: 700; color: var(--text-muted);
    text-decoration: none; transition: color 0.2s;
  }
  .mobile-nav-item:hover { color: var(--accent); }
  
  /* RESPONSIVE */
  @media (max-width: 768px) {
    .hamburger { display: flex; }
    .nav-links { display: none; } /* Hide text links */
    .nav-right-group { gap: 1rem; } /* Reduce gap on mobile */
  }
</style>