---
const navItems = [
  { name: "About", path: "/about" },
  { name: "Projects", path: "/projects" },
  { name: "Blog", path: "/blog" },
  { name: "GitHub", path: "https://github.com/nnigam96" },
  { name: "LinkedIn", path: "https://linkedin.com/in/nikhil-nigam-31131b12a" },
];
---

<nav>
  <div class="nav-inner" style="width: 100%;">
    <a href="/" class="logo">NIKHIL<span>.ML</span></a>
    
    <button class="hamburger" aria-label="Toggle menu" aria-expanded="false">
      <span class="hamburger-line"></span>
      <span class="hamburger-line"></span>
      <span class="hamburger-line"></span>
    </button>
    
    <div class="nav-links">
      {navItems.map(item => (
        <a href={item.path} class="nav-item" target={item.path.startsWith('http') ? '_blank' : undefined} rel={item.path.startsWith('http') ? 'noopener noreferrer' : undefined}>{item.name}</a>
      ))}
    </div>
  </div>
  
  <div class="mobile-menu-overlay">
    <div class="mobile-menu">
      {navItems.map(item => (
        <a href={item.path} class="mobile-nav-item" target={item.path.startsWith('http') ? '_blank' : undefined} rel={item.path.startsWith('http') ? 'noopener noreferrer' : undefined}>{item.name}</a>
      ))}
    </div>
  </div>
</nav>

<script>
  // This wrapper ensures it runs every time you navigate
  document.addEventListener('astro:page-load', () => {
    const btn = document.querySelector('.hamburger');
    const menu = document.querySelector('.mobile-menu-overlay');
    const body = document.body;
    
    if (!btn || !menu) return;
    
    function toggleMenu() {
      const isOpen = btn.getAttribute('aria-expanded') === 'true';
      btn.setAttribute('aria-expanded', !isOpen ? 'true' : 'false');
      menu.classList.toggle('active');
      body.style.overflow = !isOpen ? 'hidden' : '';
    }
    
    function closeMenu() {
      btn.setAttribute('aria-expanded', 'false');
      menu.classList.remove('active');
      body.style.overflow = '';
    }
    
    btn.addEventListener('click', toggleMenu);
    
    // Close menu when clicking on a link
    const mobileNavItems = document.querySelectorAll('.mobile-nav-item');
    mobileNavItems.forEach(item => {
      item.addEventListener('click', closeMenu);
    });
    
    // Close menu when clicking outside
    menu.addEventListener('click', (e) => {
      if (e.target === menu) {
        closeMenu();
      }
    });
  });
</script>

<style>
  .hamburger {
    display: none;
    background: none;
    border: none;
    cursor: pointer;
    padding: 8px;
    flex-direction: column;
    gap: 5px;
    z-index: 1001;
  }
  
  .hamburger-line {
    width: 24px;
    height: 2px;
    background: var(--text-main);
    transition: all 0.3s ease;
  }
  
  .hamburger[aria-expanded="true"] .hamburger-line:nth-child(1) {
    transform: rotate(45deg) translate(7px, 7px);
  }
  
  .hamburger[aria-expanded="true"] .hamburger-line:nth-child(2) {
    opacity: 0;
  }
  
  .hamburger[aria-expanded="true"] .hamburger-line:nth-child(3) {
    transform: rotate(-45deg) translate(7px, -7px);
  }
  
  .mobile-menu-overlay {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    background: rgba(18, 18, 18, 0.98);
    z-index: 1000;
    opacity: 0;
    transition: opacity 0.3s ease;
  }
  
  .mobile-menu-overlay.active {
    display: block;
    opacity: 1;
  }
  
  .mobile-menu {
    padding: 6rem 2rem 2rem;
    display: flex;
    flex-direction: column;
    gap: 2rem;
    margin-top: 80px;
  }
  
  .mobile-nav-item {
    font-family: 'Space Grotesk', sans-serif;
    font-size: 1.5rem;
    font-weight: 500;
    color: var(--text-muted);
    padding: 1rem 0;
    border-bottom: 1px solid var(--line-color);
    transition: color 0.2s;
  }
  
  .mobile-nav-item:hover {
    color: var(--accent);
  }
  
  @media (max-width: 768px) {
    .hamburger {
      display: flex;
    }
    
    .nav-links {
      display: none;
    }
  }
</style>
