---
import { getCollection } from 'astro:content';
import BaseLayout from '@layouts/BaseLayout.astro';
import Navbar from '@components/Navbar.astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  // Only generate paths for non-archived posts (explicit boolean check)
  return posts
    .filter((entry) => entry.data.archived !== true)
    .map((entry) => ({
      params: { slug: entry.slug },
      props: { entry },
    }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();

const formattedDate = entry.data.date.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<BaseLayout title={`${entry.data.title} | Nikhil R. Nigam`}>
  <div class="case-container">
    <Navbar />

    <nav class="blog-post-nav">
      <a href="/blog" class="back-link">‚Üê Back to Blog</a>
    </nav>

    <article class="blog-post blog-content">
      <div class="blog-post-meta">
        <span class="blog-post-date">{formattedDate}</span>
        <span class="blog-post-reading-time">{entry.data.readingTime}</span>
      </div>
      
      <h1 class="blog-post-title">{entry.data.title}</h1>
      
      <p class="blog-post-description">{entry.data.description}</p>

      <div class="blog-post-tags">
        {entry.data.tags.map((tag) => (
          <span class="blog-tag">{tag}</span>
        ))}
      </div>

      <div class="blog-post-content arithmatex">
        <Content />
      </div>

      {entry.data.references && entry.data.references.length > 0 && (
        <section class="blog-references">
          <h2>References</h2>
          <ol>
            {entry.data.references.map((ref) => (
              <li>
                <a href={ref.url} target="_blank" rel="noopener noreferrer">
                  {ref.label}
                </a>
              </li>
            ))}
          </ol>
        </section>
      )}
    </article>

    <div style="padding-bottom: 6rem;"></div>
  </div>
</BaseLayout>

<style>
  .blog-post-nav {
    padding: 2.5rem 0;
    margin-bottom: 2rem;
    border-bottom: 1px solid var(--line-color);
  }

  .blog-post-meta {
    display: flex;
    gap: 1.5rem;
    margin-bottom: 1.5rem;
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.85rem;
    color: var(--text-muted);
  }

  .blog-post-title {
    font-family: 'Space Grotesk', sans-serif;
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 1.5rem;
    color: var(--text-main);
    line-height: 1.1;
  }

  .blog-post-description {
    font-family: 'Inter', sans-serif;
    font-size: 1.2rem;
    color: var(--text-muted);
    margin-bottom: 2rem;
    line-height: 1.6;
  }

  .blog-post-tags {
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
    margin-bottom: 3rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid var(--line-color);
  }

  .blog-content {
    max-width: 1000px;
    margin: 0 auto;
    padding: 2rem 0;
    font-family: 'Inter', sans-serif;
    color: #e0e0e0;
    line-height: 1.8;
  }

  .blog-content h1,
  .blog-content h2,
  .blog-content h3 {
    font-family: 'Libre Baskerville', serif;
    color: var(--accent);
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    line-height: 1.3;
  }

  .blog-content h1 {
    font-size: 2.5rem;
    border-bottom: 1px solid var(--line-color);
    padding-bottom: 1rem;
  }

  .blog-content h2 {
    font-size: 1.8rem;
  }

  .blog-content a {
    color: var(--accent);
    text-decoration: underline;
    text-underline-offset: 4px;
  }

  .blog-content ul,
  .blog-content ol {
    margin-bottom: 1.5rem;
    padding-left: 1.5rem;
  }

  .blog-content li {
    margin-bottom: 0.5rem;
  }

  .blog-content blockquote {
    border-left: 4px solid var(--accent);
    padding-left: 1rem;
    margin: 2rem 0;
    font-style: italic;
    color: var(--text-muted);
    background: rgba(255, 255, 255, 0.05);
    padding: 1rem;
    border-radius: 0 8px 8px 0;
  }

  .blog-content img {
    width: 100%;
    max-width: 900px;
    height: auto;
    border-radius: 8px;
    margin: 2rem auto;
    border: 1px solid var(--line-color);
    display: block;
  }

  .blog-content code {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.9em;
    background: rgba(255, 255, 255, 0.05);
    padding: 2px 6px;
    border-radius: 3px;
    color: var(--accent);
  }

  .blog-content pre {
    background: rgba(255, 255, 255, 0.05);
    padding: 1.5rem;
    border-radius: 4px;
    overflow-x: auto;
    margin-bottom: 1.5rem;
  }

  .blog-content pre code {
    background: none;
    padding: 0;
    color: var(--text-main);
  }

  .blog-references {
    margin-top: 3rem;
    border-top: 1px solid var(--line-color);
    padding-top: 2rem;
  }

  .blog-references h2 {
    font-family: 'Libre Baskerville', serif;
    color: var(--accent);
    font-size: 1.6rem;
    margin-bottom: 1rem;
  }

  .blog-references ol {
    padding-left: 1.5rem;
    color: var(--text-muted);
  }

  .blog-references li {
    margin-bottom: 0.75rem;
  }

  @media (max-width: 768px) {
    .blog-post-title {
      font-size: 2rem;
    }

    .blog-post-description {
      font-size: 1.1rem;
    }
  }
</style>

