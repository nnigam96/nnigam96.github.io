<style>
    /* GRID LAYOUT FOR ABOUT SECTION */
    .about-hero {
        display: grid;
        grid-template-columns: 1.5fr 1fr;
        gap: 4rem;
        margin-bottom: 6rem;
        /* Changed to center to fix vertical alignment */
        align-items: center;
    }

    .bio-text {
        font-size: 1.15rem;
        /* Changed to text-main for pure white */
        color: var(--text-main); 
        font-weight: 300;
        line-height: 1.7;
    }

    /* Removed the strong selector to ensure no bolding */

    .status-badge {
        font-family: 'JetBrains Mono', monospace;
        font-size: 0.85rem;
        color: var(--accent);
        display: inline-block;
        margin-top: 1rem;
        padding: 8px 12px;
        border: 1px solid var(--line-color);
        border-radius: 4px;
        background: rgba(255, 255, 255, 0.03);
    }

    .company-context {
        font-size: 0.9rem;
        color: var(--text-muted);
        margin-top: 0.25rem;
        margin-bottom: 0.75rem;
        font-style: italic;
    }

    /* IMAGE STYLING */
    .about-image-container {
        position: relative;
        /* Removed padding-top for better center alignment */
    }

    .profile-img {
        width: 100%;
        height: auto;
        border-radius: 12px;
        border: 1px solid var(--line-color);
        /* Removed grayscale filter and transition */
    }

    /* Removed hover effect */

    /* MOBILE RESPONSIVE */
    @media (max-width: 900px) {
        .about-hero {
            grid-template-columns: 1fr;
            gap: 2rem;
        }
        
        .about-image-container {
            order: -1;
            max-width: 300px;
            margin: 0 auto;
        }
    }
</style>